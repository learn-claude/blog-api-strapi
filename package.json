{
  "name": "blog-api-strapi",
  "private": true,
  "version": "0.1.0",
  "description": "Strapi v5 headless CMS backend for the authenticated blog platform",
  "scripts": {
    "develop": "node scripts/develop.js",
    "develop:strapi": "strapi develop",
    "start": "strapi start",
    "build": "strapi build",
    "deploy": "strapi deploy",
    "strapi": "strapi",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@strapi/plugin-users-permissions": "^5.36.1",
    "@strapi/provider-email-nodemailer": "^5.30.1",
    "@strapi/provider-email-sendgrid": "^5.30.1",
    "@strapi/strapi": "^5.36.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.3",
    "styled-components": "^6.3.11",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@strapi/typescript-utils": "^5.36.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.19.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "engines": {
    "node": ">=20.0.0 <=24.x.x",
    "npm": ">=6.0.0"
  },
  "strapi": {
    "uuid": "blog-api-strapi-uuid"
  }
}
